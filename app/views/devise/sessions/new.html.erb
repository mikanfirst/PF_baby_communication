<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h3 class="text-dark bg-light py-4 mb-0">ログインする</h3>
      <div class="form-body bg-white p-4">
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-check-square"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード確認" %>
          </div>
            <%= f.submit "ログインする", class: "btn btn-block btn-info rounded-pill" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
