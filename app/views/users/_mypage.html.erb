<div class="container">
  <div class="row">
    <div class="col-md-3 mt-3 border d-none d-sm-block">
      <p><%= link_to 'フォロー', user_followings_path(user), class: "fas fa-handshake text-dark", fill: "20x20" %></p>
      <p><%= link_to 'フォロワー', user_followers_path(user), class: "fas fa-hand-holding-heart text-dark" %></p>
      <p><%= link_to '投稿', articles_path, class: "fas fa-file-alt text-dark" %></p>
      <!--<p><%= link_to '管理者おススメ記事', class: "fas fa-book-reader text-dark" %></p>-->
      <!--<p><%= link_to 'ブックマーク', class: "fas fa-bookmar text-dark" %></p>-->
      <p><%= link_to 'プロフィール編集', edit_user_path(user), class: "fas fa-user-cog text-dark" %></p>
    </div>
    <div class="col-md-8 mt-3">
      <h2 class="border-bottom">自身の投稿</h2>
      <% articles.each do |article| %>
      <div class="card" style="width: 18rem;">
        <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"/><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to article_path(article) do %>
              <%= article.title %>
            <% end %>
          </h5>
          <p class="card-text"><%= article.body %></p>
        </div>
      </div>
    </div>
  </div>
</div>