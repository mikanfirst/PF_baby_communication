<div class="container">
  <h2>投稿一覧</h2>
  <%= @posts.each do |post| %>
    <div class="card">
      <%= link_to post.title, post_path(post), class: "" %>
      <div class="card-body">
        <%= post.body %>
      </div>
      <div class="">
        <%= attachment_image_tag post, :post_image, :fill, 100, 100, format: 'jpeg' %>
      </div>
    </div>
  <% end %>
</div>