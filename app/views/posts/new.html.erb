<div class="container">
  <h2>新規投稿</h2>
  <%= form_with model: @newpost, local:true do |f| %>
  <div class="form-group">
    <%= f.label :tittle %>
    <%= f.text_field :title, class: "" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.attachment_field :post_image, class: "" %>
  </div>
  <div class="form-group">
    <%= f.submit '投稿', class: "" %>
  </div>
  <% end %>
</div>

