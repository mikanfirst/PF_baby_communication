<div class="container mt-5">
  <h2 >新規投稿</h2>
  <%= form_with model: @article_new, local:true do |f| %>
  <div class="form-group">
    <%= f.text_field :title, class: "form-control", placeholder: "題名" %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, rows:"5", class: "form-control", placeholder: "内容" %>
  </div>
  <div class="form-group">
    <i class="fas fa-image"><%= f.attachment_field :article_image, class: "" %></i>
  </div>
  <div class="form-group">
    <%= f.submit '投稿', class: "btn btn-success rounded-pill" %>
  </div>
  <% end %>
</div>


