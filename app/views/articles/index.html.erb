<div class="container">
  <h2>投稿一覧</h2>
  <% @articles.each do |article| %>
    <div class="card">
      <div class="card">
        <%= link_to article.title, article_path(article), class: "" %>
      </div>
      <div class="card-body">
        <%= article.body %>
      </div>
      <div class="">
        <%= attachment_image_tag article, :article_image, :fill, 100, 100, format: 'jpeg' %>
      </div>
    </div>
  <% end %>
</div>
